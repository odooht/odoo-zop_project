<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <menuitem id="menu_project_schedule" 
            name="Schedule Manage" 
            parent="project.menu_main_pm"
            sequence="90" />


        <record id="project_tree" model="ir.ui.view">
            <field name="name">project.project.tree</field>
            <field name="model">project.project</field>
            <field name="arch" type="xml">
                <tree string="Projects">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="constructor_id"/>
                    <field name="supervisor_id"/>
                    <field name="designer_id"/>
                    <field name="consultor_id"/>
                </tree>
            </field>
        </record>


        <record id="project_form" model="ir.ui.view">
            <field name="name">project.project.form</field>
            <field name="model">project.project</field>
            <field name="arch" type="xml">
                <form string="Task">
                    <group col="4">
                        <field name="code"/>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="constructor_id"/>
                        <field name="supervisor_id"/>
                        <field name="designer_id"/>
                        <field name="consultor_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_project_list">
            <field name="name">Projects</field>
            <field name="res_model">project.project</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="project_tree"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create a Project
                </p>
            </field>
        </record>

        <record id="action_project_list_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="project_tree"/>
            <field name="act_window_id" ref="action_project_list"/>
        </record>

        <record id="action_project_list_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="project_form"/>
            <field name="act_window_id" ref="action_project_list"/>
        </record>


        <menuitem id="menu_project_schedule_project" 
            name="Projects" 
            parent="menu_project_schedule"
            sequence="10" 
            action="action_project_list" />



        <record id="task_tree" model="ir.ui.view">
            <field name="name">project.task.tree</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <tree string="Tasks">
                    <field name="project_id"/>
                    <field name="code"/>
                    <field name="full_name"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="subtask_count"/>
                    <field name="uom_id"/>
                    <field name="price"/>
                    <field name="qty"/>
                    <field name="qty_acc"/>
                    <field name="amount"/>
                    <field name="amount_acc"/>
                    <field name="rate"/>
                </tree>
            </field>
        </record>


        <record id="task_form" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <form string="Task">
                    <group col="4">
                        <field name="name"/>
                        <field name="code"/>
                        <field name="full_name"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="project_id"/>
                        <field name="parent_id"/>
                        <field name="subtask_count"/>
                        <field name="is_leaf"/>
                        <field name="uom_id"/>
                        <field name="price"/>
                        <field name="qty"/>
                        <field name="amount_me"/>
                        <field name="amount_childs"/>
                        <field name="amount"/>
                        
                        <!-- 
                        <field name="last_daywork_id"/>
                        <field name="qty_acc"/>
                        <field name="amount_acc_me"/>
                        <field name="amount_acc_childs"/>
                        <field name="amount_acc"/>
                        <field name="rate"/>
                        -->

                    </group>
                    <group col="2">
                        <field name="child_ids"/>
                        <!-- 
                        <field name="daywork_ids"/>
                        -->
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_task_list">
            <field name="name">Tasks</field>
            <field name="res_model">project.task</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="task_tree"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create a Task
                </p>
            </field>
        </record>

        <record id="action_task_list_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="task_tree"/>
            <field name="act_window_id" ref="action_task_list"/>
        </record>

        <record id="action_task_list_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="task_form"/>
            <field name="act_window_id" ref="action_task_list"/>
        </record>

