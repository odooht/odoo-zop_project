<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <menuitem id="menu_project_schedule" 
            name="Schedule Manage" 
            parent="project.menu_main_pm"
            sequence="90" />


        <record id="project_tree" model="ir.ui.view">
            <field name="name">project.project.tree</field>
            <field name="model">project.project</field>
            <field name="arch" type="xml">
                <tree string="Projects">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="constructor_id"/>
                    <field name="supervisor_id"/>
                    <field name="designer_id"/>
                    <field name="consultor_id"/>
                </tree>
            </field>
        </record>


        <record id="project_form" model="ir.ui.view">
            <field name="name">project.project.form</field>
            <field name="model">project.project</field>
            <field name="arch" type="xml">
                <form string="Task">
                    <group col="4">
                        <field name="code"/>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="constructor_id"/>
                        <field name="supervisor_id"/>
                        <field name="designer_id"/>
                        <field name="consultor_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_project_list">
            <field name="name">Projects</field>
            <field name="res_model">project.project</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="project_tree"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create a Project
                </p>
            </field>
        </record>

        <record id="action_project_list_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="project_tree"/>
            <field name="act_window_id" ref="action_project_list"/>
        </record>

        <record id="action_project_list_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="project_form"/>
            <field name="act_window_id" ref="action_project_list"/>
        </record>


        <menuitem id="menu_project_schedule_project" 
            name="Projects" 
            parent="menu_project_schedule"
            sequence="10" 
            action="action_project_list" />



        <record id="task_tree" model="ir.ui.view">
            <field name="name">project.task.tree</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <tree string="Tasks">
                    <field name="project_id"/>
                    <field name="code"/>
                    <field name="full_name"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="subtask_count"/>
                    <field name="uom_id"/>
                    <field name="price"/>
                    <field name="qty"/>
                    <field name="amount"/>
                    <!--
                    <field name="qty_acc"/>
                    <field name="amount_acc"/>
                    <field name="rate"/>
                    -->
                </tree>
            </field>
        </record>


        <record id="task_form" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <form string="Task">
                    <group col="4">
                        <field name="name"/>
                        <field name="code"/>
                        <field name="full_name"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="project_id"/>
                        <field name="parent_id"/>
                        <field name="subtask_count"/>
                        <field name="is_leaf"/>
                        <field name="uom_id"/>
                        <field name="price"/>
                        <field name="qty"/>
                        <field name="amount_me"/>
                        <field name="amount_childs"/>
                        <field name="amount"/>
                        
                        <!-- 
                        <field name="last_daywork_id"/>
                        <field name="qty_acc"/>
                        <field name="amount_acc_me"/>
                        <field name="amount_acc_childs"/>
                        <field name="amount_acc"/>
                        <field name="rate"/>
                        -->

                    </group>
                    <group col="2">
                        <field name="child_ids"/>
                        <!-- 
                        <field name="daywork_ids"/>
                        -->
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_task_list">
            <field name="name">Tasks</field>
            <field name="res_model">project.task</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="task_tree"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create a Task
                </p>
            </field>
        </record>

        <record id="action_task_list_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="task_tree"/>
            <field name="act_window_id" ref="action_task_list"/>
        </record>

        <record id="action_task_list_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="task_form"/>
            <field name="act_window_id" ref="action_task_list"/>
        </record>


        <menuitem id="menu_project_schedule_task" 
            name="Tasks" 
            parent="menu_project_schedule"
            sequence="20" 
            action="action_task_list" />


        <record model="ir.actions.act_window" id="action_worksheet_list">
            <field name="name">Worksheets</field>
            <field name="res_model">project.task.worksheet</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create a worksheet
                </p>
            </field>
        </record>

        <menuitem id="menu_project_schedule_worksheet" 
            name="Worksheets" 
            parent="menu_project_schedule"
            sequence="30" 
            action="action_worksheet_list" />

        <record id="worksheet_tree" model="ir.ui.view">
            <field name="name">project.task.worksheet.tree</field>
            <field name="model">project.task.worksheet</field>
            <field name="arch" type="xml">
                <tree string="Worksheets">
                    <field name="project_id"/>
                    <field name="task_id"/>
                    <field name="full_name"/>
                    <field name="code"/>
                    <field name="uom_id"/>
                    <field name="date"/>
                    <field name="qty"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_olap_dim_date_list">
            <field name="name">olap.dim.date</field>
            <field name="res_model">olap.dim.date</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create a olap dimention date
                </p>
            </field>
        </record>

        <menuitem id="menu_olap_dim_date" 
            name="Dimention Date" 
            parent="menu_project_schedule"
            sequence="40" 
            action="action_olap_dim_date_list" />

        <record id="olap_dim_date_list_tree" model="ir.ui.view">
            <field name="name">olap.dim.date.tree</field>
            <field name="model">olap.dim.date</field>
            <field name="arch" type="xml">
                <tree string="Dimention Dates">
                    <field name="date"/>
                    <field name="day"/>
                    <field name="week"/>
                    <field name="month"/>
                    <field name="quarter"/>
                    <field name="year"/>
                    <field name="daykey"/>
                    <field name="weekkey"/>
                    <field name="monthkey"/>
                    <field name="quarterkey"/>
                </tree>
            </field>
        </record>



        <record model="ir.actions.act_window" id="action_workfact_list">
            <field name="name">Workfacts</field>
            <field name="res_model">project.task.workfact</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create a workfact
                </p>
            </field>
        </record>

        <menuitem id="menu_project_schedule_workfact" 
            name="Workfacts" 
            parent="menu_project_schedule"
            sequence="50" 
            action="action_workfact_list" />

        <record id="workfact_tree" model="ir.ui.view">
            <field name="name">project.task.workfact.tree</field>
            <field name="model">project.task.workfact</field>
            <field name="arch" type="xml">
                <tree string="Workfacts">
                    <field name="project_id"/>
                    <field name="task_id"/>
                    <field name="date"/>
                    <field name="year"/>
                    <field name="quarter"/>
                    <field name="month"/>
                    <field name="week"/>
                    <field name="day"/>
                    <field name="date_type"/>
                    <field name="qty"/>
                    <field name="qty_open"/>
                    <field name="qty_delta"/>
                    <field name="qty_close"/>
                    <field name="amount"/>
                    <field name="amount_open"/>
                    <field name="amount_delta"/>
                    <field name="amount_close"/>
                    <field name="rate"/>
                </tree>
            </field>
        </record>

</odoo>

